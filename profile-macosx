#######################################################################
#             configure shell to automatically use chruby             #
#######################################################################
source $(brew --prefix)/opt/chruby/share/chruby/chruby.sh
source $(brew --prefix)/opt/chruby/share/chruby/auto.sh
chruby ruby-3.1.3

#################################
#  add homebrew's sbin to PATH  #
#################################

PATH=/usr/local/sbin:$PATH
export PATH=$PATH
