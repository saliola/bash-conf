# git alias (with tab completion)
source $BASHCONF_DIR/scripts/git.bash

############
#  prompt  #
############

PROMPT_COMMAND='DIR=`pwd|sed -e "s!$HOME!~!"`; if [ ${#DIR} -gt 58 ]; then CurDir=${DIR:0:12}...${DIR:${#DIR}-43}; else CurDir=$DIR; fi'
export PS1="
\001\033[32m\002«\D{%Y-%m-%d}|\001\033[32m\002\t|\001\033[32m\002\${CurDir}»
\001\033[47m\002\033[30m\002\h\001\033[00m\002: "
