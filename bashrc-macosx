# ls aliases
alias ls="ls -G"
alias l="ls"
alias la="ls -a"
alias ll="ls -l"

# git alias (with tab completion)
alias g='git'
source $BASHCONF_DIR/scripts/git-completion.bash
complete -o default -o nospace -F _git g

# MacVIM
if [[ -e "/Applications/MacPorts/MacVim.app" ]]; then
    VIMAPP="/Applications/MacPorts/MacVim.app/Contents/MacOS/Vim"
else
    VIMAPP="/Applications/MacVim.app/Contents/MacOS/Vim"
fi
alias vim=$VIMAPP
alias vi=$VIMAPP

# SKIM
alias skim="open -a /Applications/Skim.app"

## hg configuration
alias hg='sage -hg'
